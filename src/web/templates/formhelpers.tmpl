{% macro render_field(field) %}
    <dt>{% if field.widget.input_type != 'hidden' %}{{ field.label }} {% endif %}
        <dd>{{ field(**kwargs)|safe }}
            {% if field.errors %}
                <ul class="errors">
                    {% for error in field.errors %}
                        <li>{{ error }}</li>
                    {% endfor %}
                </ul>
            {% endif %}
        </dd>
    </dt>
{% endmacro %}

